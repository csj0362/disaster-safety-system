<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">
        <include
            android:id="@+id/include"
            layout="@layout/toolbar_main" />


        <LinearLayout
            android:id="@+id/ll_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/include">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도: "
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textSize="50dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_marginLeft="7dp"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_humi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/ll_temp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="습도: "
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="습도"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_marginLeft="7dp"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_temperature"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_temperature"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_humi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_humidity"
            app:layout_constraintBottom_toTopOf="@+id/tv_temp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edge"
            android:clickable="true"
            android:onClick="onClickImage"/>

        <ImageView
            android:id="@+id/iv_humidity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_humidity"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_humi"
            app:layout_constraintStart_toEndOf="@+id/iv_temperature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_hum"
            android:layout_marginTop="50dp"
            android:background="@drawable/edge"
            android:clickable="true"
            android:onClick="onClickImage"/>

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="온도"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_temperature"
            app:layout_constraintStart_toStartOf="@id/iv_temperature"
            app:layout_constraintEnd_toEndOf="@id/iv_temperature"/>

        <TextView
            android:id="@+id/tv_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="습도"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_humidity"
            app:layout_constraintStart_toStartOf="@+id/iv_humidity"
            app:layout_constraintEnd_toEndOf="@id/iv_humidity"/>

        <ImageView
            android:id="@+id/iv_vibration"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_vibration"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_temp"
            app:layout_constraintStart_toStartOf="@+id/iv_temperature"
            app:layout_constraintEnd_toEndOf="@+id/iv_temperature"
            app:layout_constraintBottom_toTopOf="@+id/tv_vib"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge"
            android:clickable="true"
            android:onClick="onClickImage"/>

        <ImageView
            android:id="@+id/iv_fire"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edge"
            android:clickable="true"
            android:onClick="onClickImage"
            android:padding="20dp"
            android:src="@drawable/ic_fire"
            app:layout_constraintEnd_toEndOf="@+id/iv_humidity"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_humidity"
            app:layout_constraintTop_toBottomOf="@+id/tv_hum" />

        <TextView
            android:id="@+id/tv_vib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진동"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_vibration"
            app:layout_constraintStart_toStartOf="@+id/iv_vibration"
            app:layout_constraintEnd_toEndOf="@+id/iv_vibration"/>

        <TextView
            android:id="@+id/tv_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화염"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/iv_fire"
            app:layout_constraintStart_toStartOf="@+id/iv_fire"
            app:layout_constraintEnd_toEndOf="@+id/iv_fire"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>