<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_temperature"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="온도"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_humidity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/edge"/>

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="습도"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/iv_temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_temperature"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edge"/>

    <ImageView
        android:id="@+id/iv_temperature"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_temperature"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_humidity"
        app:layout_constraintBottom_toTopOf="@+id/tv_temp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edge"
        android:clickable="true"
        android:onClick="onClickImage"/>

    <ImageView
        android:id="@+id/iv_humidity"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_humidity"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_humidity"
        app:layout_constraintStart_toEndOf="@+id/iv_temperature"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_hum"
        android:layout_marginTop="50dp"
        android:background="@drawable/edge"
        android:clickable="true"
        android:onClick="onClickImage"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="온도"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_temperature"
        app:layout_constraintStart_toStartOf="@id/iv_temperature"
        app:layout_constraintEnd_toEndOf="@id/iv_temperature"/>

    <TextView
        android:id="@+id/tv_hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="습도"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_humidity"
        app:layout_constraintStart_toStartOf="@+id/iv_humidity"
        app:layout_constraintEnd_toEndOf="@id/iv_humidity"/>

    <ImageView
        android:id="@+id/iv_vibration"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_vibration"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp"
        app:layout_constraintStart_toStartOf="@+id/iv_temperature"
        app:layout_constraintEnd_toEndOf="@+id/iv_temperature"
        app:layout_constraintBottom_toTopOf="@+id/tv_vib"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge"
        android:clickable="true"
        android:onClick="onClickImage"/>

    <ImageView
        android:id="@+id/iv_fire"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fire"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_hum"
        app:layout_constraintStart_toStartOf="@+id/iv_humidity"
        app:layout_constraintEnd_toEndOf="@+id/iv_humidity"
        android:layout_marginTop="10dp"
        android:background="@drawable/edge"
        android:clickable="true"
        android:onClick="onClickImage"/>

    <TextView
        android:id="@+id/tv_vib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진동"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_vibration"
        app:layout_constraintStart_toStartOf="@+id/iv_vibration"
        app:layout_constraintEnd_toEndOf="@+id/iv_vibration"/>

    <TextView
        android:id="@+id/tv_fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="화염"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_fire"
        app:layout_constraintStart_toStartOf="@+id/iv_fire"
        app:layout_constraintEnd_toEndOf="@+id/iv_fire"/>
</androidx.constraintlayout.widget.ConstraintLayout>